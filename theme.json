{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
      "appearanceTools": true,
      "useRootPaddingAwareAlignments": true,
        "typography": {
            "fluid": true,
            "fontFamilies": [
              {
               "fontFace":[
                {
                  "fontFamily": "Conduit ITC Pro",
                  "fontStretch": "normal",
                  "fontStyle": "normal",
                  "fontWeight": "500",
                  "src": [
                    "file:./fonts/ConduitITCPro-Medium.eot?#iefix') format('embedded-opentype)",
                    "file:./fonts/ConduitITCPro-Medium.woff2') format('woff2')",
                    "file:./fonts/ConduitITCPro-Medium.woff') format('woff')",
                    "file:./fonts/ConduitITCPro-Medium.ttf') format('truetype')",
                    "file:./fonts/ConduitITCPro-Medium.svg#ConduitITCPro-Medium') format('svg')"
                  ]
               },
               {
                "fontFamily": "Conduit ITC Pro",
                "fontStretch": "normal",
                "fontStyle": "normal",
                "fontWeight": "300",
                "src": [
                  "file:./fonts/ConduitITCPro-Light.eot?#iefix') format('embedded-opentype)",
                  "file:./fonts/ConduitITCPro-Light.woff2') format('woff2')",
                  "file:./fonts/ConduitITCPro-Light.woff') format('woff')",
                  "file:./fonts/ConduitITCPro-Light.ttf') format('truetype')",
                  "file:./fonts/ConduitITCPro-Light.svg#ConduitITCPro-Light') format('svg')"
                ]
              },
              {
                "fontFamily": "Conduit ITC Pro",
                "fontStretch": "normal",
                "fontStyle": "normal",
                "fontWeight": "bold",
                "src": [
                  "file:./fonts/ConduitITCPro-Bold.eot?#iefix') format('embedded-opentype)",
                  "file:./fonts/ConduitITCPro-Bold.woff2') format('woff2')",
                  "file:./fonts/ConduitITCPro-Bold.woff') format('woff')",
                  "file:./fonts/ConduitITCPro-Bold.ttf') format('truetype')",
                  "file:./fonts/ConduitITCPro-Bold.svg#ConduitITCPro-Bold') format('svg')"
                ]
             }
              ],
              "fontFamily": "\"Conduit ITC Pro\", sans-serif",
              "name": "Conduit ITC Pro",
              "slug": "conduit-pro" 
              }],
            "fontSizes": [
              {
                "fluid": {
                  "min": "1.1rem",
                  "max": "1.3rem"
                },
                "size": "1.3rem",
                "slug": "small"
              },
              {
                "fluid": {
                  "min": "1rem",
                  "max": "1.625rem"
                },
                "size": "1.625rem",
                "slug": "medium"
              },
              {
                "fluid": {
                  "min": "1.45rem",
                  "max": "2.325rem"
                },
                "size": "2.325rem",
                "slug": "large"
              },
              {
                "fluid": {
                  "min": "2.265rem",
                  "max": "2.800rem"
                },
                "size": "2.800rem",
                "slug": "x-large"
              },
              {
                "fluid": {
                  "min": "3rem",
                  "max": "4rem"
                },
                "size": "4rem",
                "slug": "xx-large"
              }
            ],
            "lineHeight": true,
            "dropCap": true,
            "fontWeight": true,
            "fontStyle": true,
            "textTransform": true,
            "letterSpacing": true,
            "textDecoration": true
        },
        "spacing": {
          "spacingSizes": [
                  {
                    "size": "clamp(1.5rem, 5vw, 2rem)",
                    "slug": "30",
                    "name": "1"
                  },
                  {
                    "size": "clamp(1.8rem, 1.8rem + ((1vw - 0.48rem) * 2.885), 3rem)",
                    "slug": "40",
                    "name": "2"
                  },
                  {
                    "size": "clamp(2.5rem, 8vw, 4.5rem)",
                    "slug": "50",
                    "name": "3"
                  },
                  {
                    "size": "clamp(3.75rem, 10vw, 7rem)",
                    "slug": "60",
                    "name": "4"
                  },
                  {
                    "size": "clamp(5rem, 5.25rem + ((1vw - 0.48rem) * 9.096), 8rem)",
                    "slug": "70",
                    "name": "5"
                  },
                  {
                    "size": "clamp(7rem, 14vw, 11rem)",
                    "slug": "80",
                    "name": "6"
                  }
            ],
            "margin": true,
            "padding": true,
            "blockGap": true
        },
        "layout": {
            "contentSize": "1920px",
            "wideSize": "100%"
        },
        "color": {
            "defaultPalette": false,
            "background": true,
            "text": true,
            "link": true,
            "custom": true,
            "palette": [
              {
                "slug": "primary",
                "color": "#6AB651",
                "name": "Primary"
              },
              {
                "slug": "base",
                "color": "#F0F0F0",
                "name": "Base"
              },
              {
                "slug": "area",
                "color": "#FFFFFF",
                "name": "Area"
              },
              {
                "slug": "gray",
                "color": "#6F6F6E",
                "name": "gray"
              },
              {
                "slug": "black",
                "color": "#000000",
                "name": "Black"
              },
              {
                "slug": "font",
                "color": "#454545",
                "name": "Font Color"
              }
            ]
        }
    },
    "styles": {
      "typography": {
        "fontFamily": "var(--wp--preset--font-family--conduit-pro)",
        "fontSize": "var(--wp--preset--font-size--small)",
        "fontStyle": "normal",
        "fontWeight": "300",
        "lineHeight": 1.4,
        "textDecoration": "none",
        "textTransform": "none"
      },
      "color": {
        "text": "var(--wp--preset--color--font)"
      },
      "spacing": {
        "margin": {
          "top": "0px",
          "bottom": "0px",
          "left": "0px",
          "right": "0px"
        },
        "padding": {
          "top": "0px",
          "bottom": "0px",
          "left": "0px",
          "right": "0px"
        },
        "blockGap": "4rem"
      },
      "elements": {
        "h1": {
          "color": {
            "text": "var(--wp--preset--font-family--black)"
          },
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--conduit-pro)",
            "fontSize": "var(--wp--preset--font-size--xx-large)",
            "fontWeight": "400",
            "lineHeight": "1.4",
            "textDecoration": "none",
            "textTransform": "none"
          }
        },
        "h2": {
          "color": {
            "text": "var(--wp--preset--font-family--black)"
          },
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--conduit-pro)",
            "fontSize": "var(--wp--preset--font-size-x-large)",
            "fontWeight": "400",
            "lineHeight": "1.4",
            "textDecoration": "none",
            "textTransform": "none"
          }
        },
        "h3": {
          "color": {
            "text": "var(--wp--preset--font-family--black)"
          },
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--conduit-pro)",
            "fontSize": "var(--wp--preset--font-size--large)",
            "fontWeight": "400",
            "lineHeight": "1.4",
            "textDecoration": "none",
            "textTransform": "none"
          }
        },
        "h4": {
          "color": {
            "text": "var(--wp--preset--font-family--black)"
          },
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--conduit-pro)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "fontWeight": "400",
            "lineHeight": "1.4",
            "textDecoration": "none",
            "textTransform": "none"
          }
        },
        "h5": {
          "color": {
            "text": "var(--wp--preset--font-family--black)"
          },
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--conduit-pro)",
            "fontSize": "var(--wp--preset--font-size--small)",
            "fontWeight": "400",
            "lineHeight": "1.4",
            "textDecoration": "none",
            "textTransform": "none"
          }
        },
        "h6": {
          "color": {
            "text": "var(--wp--preset--font-family--black)"
          },
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--conduit-pro)",
            "fontSize": "var(--wp--preset--font-size--small)",
            "fontWeight": "400",
            "lineHeight": "1.4",
            "textDecoration": "none",
            "textTransform": "none"
          }
        },
        "link": {
          "color": {
            "text": "var(--wp--preset--color--gray)"
          },
          ":hover": {
            "typography": {
              "textDecoration": "none"
            }
          },
          ":focus": {
            "typography": {
              "textDecoration": "underline dashed"
            }
          },
          ":active": {
            "color": {
              "text": "var(--wp--preset--color--black)"
            },
            "typography": {
              "textDecoration": "none"
            }
          },
          "typography": {
            "fontFamily": "var(--wp--preset--font-family--conduit-pro)",
            "fontSize": "var(--wp--preset--font-size--small)",
            "fontWeight": "300",
            "lineHeight": "1.4",
            "textDecoration": "none",
            "textTransform": "none"
          }
        }
      },
      "blocks": {
        "acf/verfahren-text":{
          "spacing": {
            "margin": {
              "bottom": "var(--wp--preset--spacing--30) !important",
              "top": "var(--wp--preset--spacing--30) !important"
            },
            "padding": {
              "bottom": "var(--wp--preset--spacing--40) !important",
              "top": "var(--wp--preset--spacing--40) !important"
            }
          }
        },
        "acf/page-text-bilder-icon":{
          "spacing": {
            "margin": {
              "bottom": "var(--wp--preset--spacing--30) !important",
              "top": "var(--wp--preset--spacing--30) !important"
            },
            "padding": {
              "bottom": "var(--wp--preset--spacing--40) !important",
              "top": "var(--wp--preset--spacing--40) !important"
            }
          }
        }
      }
    }
}
